<div class="ttt-board">
    {{#each board}}
        <div id="ttt-row-{{@index}}">
        {{#each this}}
            {{#hasSymbol this}}
                <div id="ttt-field-{{@index}}" class="ttt-field">
                    {{{symbol this}}}
                </div>
            {{else}}
                <div id="ttt-field-{{@index}}" class="ttt-active ttt-field">
                </div>
            {{/hasSymbol}}
        {{/each}}
        </div>
    {{/each}}
</div>